<div class="pantry-container">
    <header>
        <img class='brand-img' data-id={{id}}>
        <nav></nav>
    </header>
    <div class="blur"></div>
    <div class="jumbo"></div>
    <div class="body-container">
        <div class="ingredient-container">
            <div class="search">
                <form>
                    <input id='ingredient-input' list="ingredients" name="ingredient" autocomplete="off">
                    <datalist id="ingredients">
                    </datalist>
                    <button class="submit-ingredient">Add Ingredient</button>
                </form>
            </div>
            <div class="ingredients">
                {{#if ingredients}}
                {{#each ingredients}}
                    <li class="ingredient">{{this.dataValues.name}}</li>
                {{/each}}
                {{else}}
                    <div class="empty-data">
                        <h1>No ingredients saved.</h1>
                        <p>Search for ingredients above!</p>
                    </div>
                {{/if}}
            </div>
        </div>
        <div class="recipe-container">
            <div class="recipes">
                {{#if recipes}}
                {{#each recipes}}
                    <div class="recipe-card" data-id={{this.dataValues.recipe_id}}>
                        <img src={{this.dataValues.image}} class="card-img" alt={{this.dataValues.name}}>
                        <div class="card-body">
                            <h5 class="card-title">{{this.dataValues.name}}</h5>
                            <p class="card-text">{{this.dataValues.summary}}</p>
                        </div>
                    </div>
                {{/each}}
                {{else}}
                    <div class="empty-data">
                        <h1>No recipes saved.</h1>
                        <p>Search and save recipes using your ingredients!</p>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>